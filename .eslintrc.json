{
    "env": {
        "node": true,
        "es2022": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "prefer-const": "error",
        "no-var": "error"
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/",
        ".prisma/"
    ]
}